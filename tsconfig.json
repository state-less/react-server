{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*", "src/package.json"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
